<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030823"
    android:backgroundTint="#050C39"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="302dp"
        android:layout_height="67dp"
        android:layout_marginTop="84dp"
        android:background="#126C0F"
        android:backgroundTint="#4F61C3"
        android:onClick="go_geu"
        android:text="Graphic Era Deemed University"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="293dp"
        android:layout_height="59dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#374CCD"
        android:onClick="go_gehu"
        android:text="Graphic Era Hill University"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="297dp"
        android:layout_height="71dp"
        android:layout_marginTop="60dp"
        android:onClick="go_Erp"
        android:text="ERP"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="286dp"
        android:layout_height="69dp"
        android:layout_marginTop="56dp"
        android:onClick="go_Lib"
        android:text="Digital Library"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="303dp"
        android:layout_height="82dp"
        android:layout_marginTop="48dp"
        android:onClick="go_exam"
        android:text="Online EXAM"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />
</androidx.constraintlayout.widget.ConstraintLayout>